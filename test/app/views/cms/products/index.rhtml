<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  
<% for product in @products %>
  <tr>
    <td><%=h product.name %></td>
    <td><%= link_to 'Show', smart_url(:cms, product) %></td>
    <td><%= link_to 'Edit', smart_url(:cms, :edit, product) %></td>
    <td><%= link_to 'Destroy', smart_url(:cms, product), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product', smart_url(:cms, :new, :product) %>