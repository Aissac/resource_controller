<h1>Editing product</h1>

<%= error_messages_for :product %>

<% form_for(:product, :url => smart_url(:cms, @product), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', smart_url(:cms, @product) %> |
<%= link_to 'Back', smart_url(:cms, :products) %>